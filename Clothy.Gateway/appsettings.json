{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "catalog-route": {
                "ClusterId": "catalog-cluster",
                "Match": { "Path": "/api/catalog/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
                "Metadata": {
                    "version": "v1",
                    "team": "catalog-team",
                    "priority": "high",
                    "rateLimit": "100" 
                }
            },
            "orders-route": {
                "ClusterId": "orders-cluster",
                "Match": { "Path": "/api/orders/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
                "Metadata": {
                    "version": "v2",
                    "team": "orders-team",
                    "priority": "medium",
                    "rateLimit": "50" 
                }
            },
            "reviews-route": {
                "ClusterId": "reviews-cluster",
                "Match": { "Path": "/api/reviews/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
                "Metadata": {
                    "version": "v1",
                    "team": "reviews-team",
                    "priority": "low",
                    "rateLimit": "20" 
                }
            },
            "aggregator-route": {
                "ClusterId": "aggregator-cluster",
                "Match": { "Path": "/api/aggregator/{**catch-all}" },
                "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
                "Metadata": {
                    "version": "v1",
                    "team": "aggregator-team",
                    "priority": "high",
                    "rateLimit": "80" 
                }
            }
        },
        "Clusters": {
            "catalog-cluster": {
                "Destinations": { "catalog-destination": { "Address": "http://localhost:5001" } }
            },
            "orders-cluster": {
                "Destinations": { "orders-destination": { "Address": "http://localhost:5002" } }
            },
            "reviews-cluster": {
                "Destinations": { "reviews-destination": { "Address": "http://localhost:5003" } }
            },
            "aggregator-cluster": {
                "Destinations": { "aggregator-destination": { "Address": "http://localhost:5004" } }
            }
        }
    }
}